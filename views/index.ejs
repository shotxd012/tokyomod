<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        'tokyo-pink': '#FF69B4',
                    }
                }
            }
        }
    </script>
    <style>
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
        .animate-pulse {
            animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }
        .hero-background {
            background-image: url('https://i.imgur.com/TWxOE5C.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }
        .text-shadow {
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }
    </style>
</head>
<body class="bg-gray-900 dark:bg-gray-900 text-white dark:text-gray-100 transition-colors duration-300">
    <div id="loading" class="fixed inset-0 z-50 flex items-center justify-center bg-gray-100 dark:bg-gray-900">
        <svg class="w-48 h-48 animate-pulse" viewBox="0 0 800 200" fill="none" xmlns="http://www.w3.org/2000/svg">
            <!-- Animated text "Tokyo Anarchy" -->
            <text x="40" y="100" fill="#FF69B4" font-size="40" font-family="Arial, sans-serif" font-weight="bold" text-anchor="middle" opacity="0">
                T
            </text>
            <text x="80" y="100" fill="#FF69B4" font-size="40" font-family="Arial, sans-serif" font-weight="bold" text-anchor="middle" opacity="0">
                O
            </text>
            <text x="120" y="100" fill="#FF69B4" font-size="40" font-family="Arial, sans-serif" font-weight="bold" text-anchor="middle" opacity="0">
                K
            </text>
            <text x="160" y="100" fill="#FF69B4" font-size="40" font-family="Arial, sans-serif" font-weight="bold" text-anchor="middle" opacity="0">
                Y
            </text>
            <text x="200" y="100" fill="#FF69B4" font-size="40" font-family="Arial, sans-serif" font-weight="bold" text-anchor="middle" opacity="0">
                O
            </text>
            <text x="260" y="100" fill="#FF69B4" font-size="40" font-family="Arial, sans-serif" font-weight="bold" text-anchor="middle" opacity="0">
                M
            </text>
            <text x="320" y="100" fill="#FF69B4" font-size="40" font-family="Arial, sans-serif" font-weight="bold" text-anchor="middle" opacity="0">
                O
            </text>
            <text x="380" y="100" fill="#FF69B4" font-size="40" font-family="Arial, sans-serif" font-weight="bold" text-anchor="middle" opacity="0">
                D
            </text>
            <text x="440" y="100" fill="#FF69B4" font-size="40" font-family="Arial, sans-serif" font-weight="bold" text-anchor="middle" opacity="0">
                D
            </text>
            <text x="500" y="100" fill="#FF69B4" font-size="40" font-family="Arial, sans-serif" font-weight="bold" text-anchor="middle" opacity="0">
                E
            </text>
            <text x="560" y="100" fill="#FF69B4" font-size="40" font-family="Arial, sans-serif" font-weight="bold" text-anchor="middle" opacity="0">
                D
            </text>
        
            <!-- Adding animation -->
            <style>
                text {
                    animation: fadeInText 1s ease-out forwards;
                }
                text:nth-child(1) { animation-delay: 0.1s; }
                text:nth-child(2) { animation-delay: 0.2s; }
                text:nth-child(3) { animation-delay: 0.3s; }
                text:nth-child(4) { animation-delay: 0.4s; }
                text:nth-child(5) { animation-delay: 0.5s; }
                text:nth-child(6) { animation-delay: 0.6s; }
                text:nth-child(7) { animation-delay: 0.7s; }
                text:nth-child(8) { animation-delay: 0.8s; }
                text:nth-child(9) { animation-delay: 0.9s; }
                text:nth-child(10) { animation-delay: 1.0s; }
                text:nth-child(11) { animation-delay: 1.1s; }
        
                @keyframes fadeInText {
                    from {
                        opacity: 0;
                    }
                    to {
                        opacity: 1;
                    }
                }
            </style>
        </svg>
    </div>
    <%- include('partials/nav') %>

    <section id="home" class="hero-gradient min-h-screen flex items-center justify-center pt-16">
        <div class="container mx-auto px-4 py-32 text-center">
            <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-purple-500 to-orange-500 animate-fade-in">
                Welcome to Tokyo Modded
            </h1>
            <p class="text-xl md:text-2xl mb-8 text-gray-300">
                Experience enhanced Minecraft gameplay with our curated mod packs
            </p>
            <div class="flex justify-center space-x-4 animate-fade-in delay-200">
                <button id="play-now" class="btn-primary px-8 py-3 rounded-lg text-lg font-medium">
                    Play Now
                </button>
                <a href="https://discord.gg/afhZ8KFnKn" target="_blank" class="btn-secondary px-8 py-3 rounded-lg text-lg font-medium">
                    Join Discord
                </a>
            </div>
        </div>
    </section>

<section id="modespacks" class="py-20 bg-gray-900">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-bold text-center mb-12 animate-fade-in">Our Modes Packs</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <div class="game-mode-card rounded-xl p-6 text-center animate-fade-in delay-100">
                    <div class="w-16 h-16 mx-auto mb-4 bg-red-500 rounded-lg flex items-center justify-center">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold mb-2">Create Mod</h3>
                    <p class="text-gray-400">Unleash your creativity with advanced contraptions and engineering marvels!</p>
                </div>
                <div class="game-mode-card rounded-xl p-6 text-center animate-fade-in delay-200">
                    <div class="w-16 h-16 mx-auto mb-4 bg-yellow-500 rounded-lg flex items-center justify-center">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 2L3 14h7l-1 8 10-12h-7l1-8z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold mb-2">Create Addition</h3>
                    <p class="text-gray-400">Electric Motor: Generates kinetic energy from Forge Energy, provides a ComputerCraft peripheral!</p>
                </div>
                <div class="game-mode-card rounded-xl p-6 text-center animate-fade-in delay-300">
                    <div class="w-16 h-16 mx-auto mb-4 bg-green-500 rounded-lg flex items-center justify-center">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 8h12M6 12h12m-6 4h6" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold mb-2">Drawer</h3>
                    <p class="text-gray-400">Organize your resources efficiently with functional storage solutions!</p>
                </div>
                <div class="game-mode-card rounded-xl p-6 text-center animate-fade-in delay-100">
                    <div class="w-16 h-16 mx-auto mb-4 bg-blue-500 rounded-lg flex items-center justify-center">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21V9a2 2 0 012-2h14a2 2 0 012 2v12M3 21h18M3 21l9-9 9 9M9 21v-6h6v6" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold mb-2">FramedBlocks</h3>
                    <p class="text-gray-400">FramedBlocks adds blocks of various shapes that can be made to look like almost any other block in the game!</p>
                </div>
                <div class="game-mode-card rounded-xl p-6 text-center animate-fade-in delay-200">
                    <div class="w-16 h-16 mx-auto mb-4 bg-purple-500 rounded-lg flex items-center justify-center">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold mb-2">Easy Villager</h3>
                    <p class="text-gray-400">Simplify villager management with intuitive and convenient tools!</p>
                </div>
                <div class="game-mode-card rounded-xl p-6 text-center animate-fade-in delay-300">
                    <div class="w-16 h-16 mx-auto mb-4 bg-pink-500 rounded-lg flex items-center justify-center">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2l4 7H8l4-7zm0 11a4 4 0 110 8 4 4 0 010-8z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold mb-2">More</h3>
                    <p class="text-gray-400">Discover additional features and enhancements to elevate your gameplay!</p>
                </div>
            </div>
        </div>
    </section>
    
    <section class="py-20 bg-gray-800">
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-4xl font-bold mb-12">Server Status</h2>
            <div class="inline-flex items-center space-x-2 bg-gray-900 px-6 py-3 rounded-lg">
                <span class="w-3 h-3 bg-green-500 rounded-full"></span>
                <span class="text-lg">Online - Join now at modded.tokyomc.fun</span>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

    <script>
        window.addEventListener('load', () => {
            setTimeout(() => {
                document.getElementById('loading').classList.add('hidden');
            }, 4000); // 4 seconds delay
        });

        document.getElementById('play-now').addEventListener('click', function() {
            const serverIP = 'modded.tokyomc.fun';

            navigator.clipboard.writeText(serverIP).then(() => {
                alert('Server IP copied to clipboard: ' + serverIP);
            }).catch(err => {
                console.error('Failed to copy server IP: ', err);
                alert('Failed to copy server IP. Please try again.');
            });
        });
    </script>
</body>
</html>
