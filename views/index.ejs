<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TokyoMC Mod Files</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            'custom-bg': '#0f172a',
            'custom-container': '#1e293b',
            'custom-header': '#2a3a53',
            'custom-border': '#3e4c6a',
          },
          fontFamily: {
            'inter': ['Inter', 'sans-serif'],
          },
        }
      }
    }
  </script>
</head>
<body class="bg-custom-bg text-white min-h-screen p-5 font-inter">
  <div class="max-w-7xl mx-auto bg-custom-container rounded-xl shadow-lg overflow-hidden">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center p-5 bg-custom-header border-b border-custom-border">
      <div>
        <h1 class="text-2xl font-semibold">Tokyomc.zip</h1>
        <span class="text-sm text-gray-400"><%= files.length %> items</span>
      </div>
      <div class="mt-4 sm:mt-0 w-full sm:w-auto">
        <button id="downloadAllBtn" class="w-full sm:w-auto px-5 py-2 bg-blue-500 hover:bg-blue-600 rounded-md text-white font-medium transition duration-200 ease-in-out">
          Download all
        </button>
      </div>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="bg-custom-header">
            <th class="text-left p-4 font-medium text-gray-400">Name</th>
            <th class="text-left p-4 font-medium text-gray-400">Last modified</th>
            <th class="text-left p-4 font-medium text-gray-400">File size</th>
            <th class="text-left p-4 font-medium text-gray-400">Action</th>
          </tr>
        </thead>
        <tbody>
          <% files.forEach(file => { %>
            <tr class="hover:bg-custom-header transition duration-150 ease-in-out">
              <td class="p-4">
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"></path>
                    <polyline points="13 2 13 9 20 9"></polyline>
                  </svg>
                  <%= file.name %>
                </div>
              </td>
              <td class="p-4 text-gray-400"><%= file.modified || 'Jan 5, 2025' %></td>
              <td class="p-4 text-gray-400"><%= file.size %></td>
              <td class="p-4">
                <button class="download-btn px-4 py-2 bg-blue-500 hover:bg-blue-600 rounded-md text-white font-medium transition duration-200 ease-in-out" data-file="<%= file.name %>">
                  Download
                </button>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <div id="loadingOverlay" class="fixed inset-0 bg-custom-bg bg-opacity-80 flex justify-center items-center z-50 opacity-0 invisible transition-opacity duration-300 ease-in-out">
    <div class="w-12 h-12 border-4 border-blue-500 border-t-transparent rounded-full animate-spin"></div>
  </div>

  <script>
document.addEventListener('DOMContentLoaded', () => {
  const downloadAllBtn = document.getElementById('downloadAllBtn');
  const downloadBtns = document.querySelectorAll('.download-btn');
  const loadingOverlay = document.getElementById('loadingOverlay');

  function showLoading() {
    loadingOverlay.classList.remove('opacity-0', 'invisible');
  }

  function hideLoading() {
    loadingOverlay.classList.add('opacity-0', 'invisible');
  }

  function simulateDownload(btn) {
    btn.disabled = true;
    btn.classList.add('opacity-70', 'cursor-not-allowed');
    showLoading();

    setTimeout(() => {
      btn.disabled = false;
      btn.classList.remove('opacity-70', 'cursor-not-allowed');
      hideLoading();
    }, 2000);
  }

  downloadAllBtn.addEventListener('click', () => {
    simulateDownload(downloadAllBtn);
    window.location.href = '/download-all';
  });

  downloadBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const fileName = btn.getAttribute('data-file');
      simulateDownload(btn);
      window.location.href = `/download/${fileName}`;
    });
  });
});
  </script>
</body>
</html>
